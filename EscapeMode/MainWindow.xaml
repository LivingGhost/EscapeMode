<Window x:Class="EscapeMode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EscapeMode"
        mc:Ignorable="d"
        Title="EscapeMode" Height="250" Width="250"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <CheckBox x:Name="checkBox1" Content="ノートPCの画面を閉じるとロック" IsChecked="{Binding Item.Lock, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,0" FontFamily="Meiryo UI"/>
        <Button Content="OK" Margin="10,181,10,10" Click="OkButton_Click"/>
    </Grid>
</Window>
